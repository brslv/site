---
layout: base-layout.pug
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---

each post in posts
  article(class="post excerpt")
    h1(class="title")
      a(href=post.url)= post.data.title
    time(class="date small" datetime=filters.dateIso(post.date))= filters.dateReadable(post.date)
    p(class="excerpt")= filters.excerpt(post)
